<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Card fill -->
    <solid android:color="@color/white" />

    <!-- Round corners -->
    <corners android:radius="12dp"/>

    <!-- Optional stroke -->
    <stroke
        android:width="1dp"
        android:color="#1A000000" />

    <!-- Drop shadow for pre-Lollipop: use elevation on view rather than shadow here -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
