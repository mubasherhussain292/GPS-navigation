<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#003E7B"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_weather" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/nativeAdContainer"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/relativeLayoutTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:fontFamily="@font/readexpro_semibold"
                    android:gravity="center"
                    android:text="@string/weather"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:srcCompat="@drawable/leftarrowwhitebg" />

            </RelativeLayout>

            <View
                android:id="@+id/viewOne"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/relativeLayoutTop"
                android:background="#C5C5C5"
                app:layout_constraintTop_toBottomOf="@id/relativeLayoutTop" />

            <RelativeLayout
                android:id="@+id/relativeLayoutWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewOne">

                <RelativeLayout
                    android:id="@+id/relativeLayoutLocationTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp">

                    <RelativeLayout
                        android:id="@+id/relativeLayoutCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageViewWeatherLocation"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/weather_location">


                        </ImageView>

                        <TextView
                            android:id="@+id/textViewCityName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@id/imageViewWeatherLocation"
                            android:fontFamily="@font/readexpro_semibold"
                            android:gravity="center"
                            android:text="@string/current_location"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/readexpro_regular"
                        android:gravity="center"
                        android:text="@string/today_12_32_pm"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_10sdp" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageViewWeather"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/relativeLayoutLocationTime"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cloud_rain_icon" />

                <TextView
                    android:id="@+id/textViewTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageViewWeather"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/readexpro_regular"
                    android:includeFontPadding="false"
                    android:text="@string/_30"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_30sdp" />

                <TextView
                    android:id="@+id/textViewWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewTemp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/readexpro_regular"
                    android:includeFontPadding="false"
                    android:text="@string/sunny"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/relativeLayoutWindHumidityVisibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewWeather"
                    android:layout_marginHorizontal="@dimen/_24sdp"
                    android:baselineAligned="false"
                    android:weightSum="3">

                    <RelativeLayout
                        android:id="@+id/relativeLayoutWind"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageViewWindBG"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/windbg" />

                        <TextView
                            android:id="@+id/textViewRealTimeWind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_toEndOf="@id/imageViewWindBG"
                            android:fontFamily="@font/readexpro_regular"
                            android:text="@string/_9_km"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_10sdp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutHumidity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageViewHumidityBG"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/humiditybg" />

                        <TextView
                            android:id="@+id/textViewRealTimeHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_toEndOf="@id/imageViewHumidityBG"
                            android:fontFamily="@font/readexpro_regular"
                            android:text="@string/_25"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_10sdp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutVisibilty"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageViewVisibiltyBG"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/visibilitybg" />

                        <TextView
                            android:id="@+id/textViewRealTimeVisibilty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_toEndOf="@id/imageViewVisibiltyBG"
                            android:fontFamily="@font/readexpro_regular"
                            android:text="1.7"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_10sdp" />


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/tvToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutWeather"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/readexpro_semibold"
                android:includeFontPadding="false"
                android:text="@string/today"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:id="@+id/linearlayoutToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvToday"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/today_weather_bg"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewWeatherActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:clipToPadding="false"
                    android:fadeScrollbars="false"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:scrollbars="none" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvNextSevenDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearlayoutToday"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/readexpro_semibold"
                android:includeFontPadding="false"
                android:text="@string/next_7_days"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:id="@+id/linearlayoutNextSeven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNextSevenDays"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/today_weather_bg"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewNextSixteenDaysWeatherActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:clipToPadding="false"
                    android:fadeScrollbars="false"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:scrollbars="none" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutBelow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayoutWeather"
                android:background="@drawable/rounded_top_background"
                android:visibility="gone">

                <View
                    android:id="@+id/viewCenter"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/viewlocationroutebg" />


                <!--    <ScrollView-->
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewCenter"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relativeLayoutWeather">


                        <TextView
                            android:id="@+id/textViewToday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/readexpro_semibold"
                            android:text="Today"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewWeatherActivityNew"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textViewToday"
                            android:layout_margin="@dimen/_10sdp"
                            android:fadeScrollbars="false"
                            android:scrollbarSize="@dimen/_1sdp"
                            android:scrollbarThumbHorizontal="@color/colorPrimary"
                            android:scrollbars="horizontal" />


                        <TextView
                            android:id="@+id/textViewNextSevenDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/recyclerViewWeatherActivityNew"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/readexpro_semibold"
                            android:text="Next 16 Days"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewNextSixteenDaysWeatherActivityNew"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textViewNextSevenDays"
                            android:layout_margin="@dimen/_10sdp"
                            android:fadeScrollbars="false"
                            android:scrollbarSize="@dimen/_2sdp"
                            android:scrollbarThumbHorizontal="@color/colorPrimary"
                            android:scrollbars="horizontal" />


                    </RelativeLayout>


                </androidx.core.widget.NestedScrollView>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


    <FrameLayout
        android:id="@+id/nativeAdContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>