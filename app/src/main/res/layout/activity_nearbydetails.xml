<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main"
    tools:context="com.example.myapplication.gpsappworktest.ui.NearbyDetailsActivity">



    <RelativeLayout
        android:id="@+id/relativeLayoutTop"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewWhere"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_50sdp"
            android:fontFamily="@font/readexpro_semibold"
            android:gravity="center"
            android:text="@string/nearbyplaces"
            android:textColor="#000000"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            app:srcCompat="@drawable/leftarrowbg" />

    </RelativeLayout>

    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/relativeLayoutTop"
        android:background="#C5C5C5" />




<!--    android:background="@drawable/relativelayoutlocationroutebg"-->

    <RelativeLayout
        android:id="@+id/relativeLayoutRecyclerViewNearbyDetailsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/viewOne"
        android:elevation="@dimen/_3sdp">

<!--        <View-->
<!--            android:id="@+id/view"-->
<!--            android:layout_width="@dimen/_70sdp"-->
<!--            android:layout_height="@dimen/_4sdp"-->
<!--            android:layout_marginTop="@dimen/_10sdp"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:background="@drawable/viewlocationroutebg" />-->



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNearbyDetailsActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:fadeScrollbars="false"
            android:scrollbarSize="@dimen/_2sdp"
            android:scrollbarThumbHorizontal="@color/colorPrimary"
            android:scrollbars="horizontal" />





    </RelativeLayout>



</RelativeLayout>